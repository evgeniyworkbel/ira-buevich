{
  "name": "ira-buevich",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "tsc && next build --turbopack",
    "start": "next start",
    "lint:lang": "eslint .",
    "lint:style": "stylelint \"**/*.css\"",
    "lint": "npm run lint:lang && npm run lint:style",
    "lint:fix": "eslint --fix . && stylelint \"**/*.css\" --fix",
    "format:check": "prettier -c .",
    "format": "prettier -w .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier -w --ignore-unknown"
    ],
    "**/*.{css}": [
      "stylelint \"**/*.css\" --fix"
    ]
  },
  "dependencies": {
    "next": "15.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@evgeniyworkbel/prettier-config": "^1.0.2",
    "@evgeniyworkbel/stylelint-config": "^1.0.2",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "stylelint": "^16.23.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}